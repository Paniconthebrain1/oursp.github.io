@model List<OurSunday.ViewModel.UserVM>

@{
    ViewData["Title"] = "Index";
}



<div class="container-fluid">
    <a class="btn btn-primary mb-2" asp-action="Register" asp-controller="User">
        Add User
    </a>

    <div class="card">
        <div class="card-header bg-primary text-bg-light">
            
            <h3 class="card-title text-white">List of users </h3>
        </div>
        <div class="card-body">
            <table class="table table-stripped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>User Name</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.FristName</td>
                            <td>@user.LastName</td>
                            <td>@user.UserName</td>        
                            <th>
                                <a class="btn btn-secondary">Reset Password</a>
                            </th>
                        </tr>
                    }
                </tbody>

            </table>
            
        </div>

    </div>

</div>