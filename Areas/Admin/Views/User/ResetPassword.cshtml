@model OurSunday.ViewModel.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}



<div class="container-fluid">
    <a class="btn btn-primary mb-2" asp-action="Index" asp-controller="User">
        Go Back
    </a>

    <div class="card">
        <div class="card-header bg-primary text-bg-light">

            <h3 class="card-title text-white">List of users </h3>
        </div>
        <div class="card-body">

            <input type="hidden" asp-for="id" />
            <form asp-action="ResetPassword" asp-controller="User" asp-asp-area="Admin">
                <div class="mb-2">
                    <label>User Name</label>
                    <input type="text" asp-for="Username" class="form-control"  disabled/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>New password</label>
                    <input type="password" asp-for="Newpassword" class="form-control" />
                    <span asp-validation-for="Newpassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
           

        </div>


    </div>

</div>